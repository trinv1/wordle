<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="wordle.SettingsPage"
             Title="SettingsPage">

    <StackLayout Padding="20">
        
        <!-- Label for settings page and buttons for options for the user -->
        
        <Label Text="Settings Page" />
        <Button Text="Dark Mode" Clicked="DarkModeButton_Clicked" />
        <Button x:Name="FontSizeButton" Text="Font Size" Clicked="FontSizeButton_Clicked" />
        <Button Text="Enable Easy Mode" Clicked="EasyModeButton_Clicked" />
        <Button Text="Time Limit" Clicked="TimeLimitButton_Clicked" />
   
    </StackLayout>
    
</ContentPage>
